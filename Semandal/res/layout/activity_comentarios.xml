<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="35dp"
        android:src="@drawable/bandera_and" />

    <ImageView
        android:id="@+id/Amigos"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/Imagebtton"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/salir" />

    <ImageView
        android:id="@+id/Noticias"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/Amigos"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/Amigos"
        android:src="@drawable/noticias" />

    <ImageView
        android:id="@+id/deuda"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/Amigos"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/Noticias"
        android:src="@drawable/municipios" />
    <ImageView
        android:id="@+id/Imagebtton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher" />

    <Button
        android:id="@+id/enviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33dp"
        android:text="@string/Enviar" />

	<EditText
	    android:id="@+id/DwEdit"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_above="@+id/enviar"
	    android:layout_alignParentLeft="true"
	    android:layout_marginBottom="15dp"
	    android:ems="10"
	    android:hint="Inserte aquÃ­ su comentario"
	    android:inputType="textCapSentences"
	    android:minLines="10"
	    android:overScrollMode="always"
	    android:scrollbarStyle="insideInset"
	    android:scrollbars="vertical" >

	</EditText>

	<ListView
	    android:id="@+id/listacomentarios"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_above="@+id/DwEdit"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@+id/imageView1"
	    android:scrollbarAlwaysDrawVerticalTrack="true"
	    android:scrollbars="vertical" >

	</ListView>

</RelativeLayout>
